#include <stdio.h>

#define MAX_FRAMES 10
#define MAX_PAGES 50

int predict(int pages[], int frames[], int pageCount, int frameCount, int index) {
    int pos = -1, farthest = index;
    for (int i = 0; i < frameCount; i++) {
        int j;
        for (j = index; j < pageCount; j++) {
            if (frames[i] == pages[j]) {
                if (j > farthest) {
                    farthest = j;
                    pos = i;
                }
                break;
            }
        }
        if (j == pageCount) {
            return i; // This page won't be used again
        }
    }

    return (pos == -1) ? 0 : pos;
}

int main() {
    int pages[MAX_PAGES], frames[MAX_FRAMES];
    int pageCount, frameCount, pageFaults = 0;
    int i, j, found, filled = 0;

    printf("Enter number of pages: ");
    scanf("%d", &pageCount);

    printf("Enter the page reference string:\n");
    for (i = 0; i < pageCount; i++) {
        scanf("%d", &pages[i]);
    }

    printf("Enter number of frames: ");
    scanf("%d", &frameCount);

    for (i = 0; i < frameCount; i++) {
        frames[i] = -1;
    }

    printf("\nPage\tFrames\t\tPage Fault\n");

    for (i = 0; i < pageCount; i++) {
        found = 0;

        // Check if page is already in frames
        for (j = 0; j < frameCount; j++) {
            if (frames[j] == pages[i]) {
                found = 1;
                break;
            }
        }

        if (!found) {
            pageFaults++;

            if (filled < frameCount) {
                frames[filled++] = pages[i];
            } else {
                int pos = predict(pages, frames, pageCount, frameCount, i + 1);
                frames[pos] = pages[i];
            }

            // Print frames
            printf("%d\t", pages[i]);
            for (j = 0; j < frameCount; j++) {
                if (frames[j] != -1)
                    printf("%d ", frames[j]);
                else
                    printf("- ");
            }
            printf("\tYes\n");
        } else {
            // No page fault
            printf("%d\t", pages[i]);
            for (j = 0; j < frameCount; j++) {
                if (frames[j] != -1)
                    printf("%d ", frames[j]);
                else
                    printf("- ");
            }
            printf("\tNo\n");
        }
    }

    printf("\nTotal Page Faults: %d\n", pageFaults);

    return 0;
}
